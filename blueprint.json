  "software": {
    "base": {
      "name": "dolibarr",
      "framework": "apache_php",
      "deployment_type": "web",
      "http_protocol": "http_and_https",
      "web_root_directory": "htdocs",
      "memory": {
        "required": 196,
        "recommended": 225
      },
      "installation_report": "\r\nGoto _Engines_Builder(http_protocol)://_Engines_Builder(fqdn)/install/\r\nClick to finish install process\r\nClick start on Fresh install\r\nSet the following\r\n\r\nWeb server\r\n leave as is\r\n\r\nDolibarr Database\r\nDatabase name _Engines_Environment(dbname)\r\nDriver type leave as default\r\nServer _Engines_Environment(dbhost)\r\nPort leave blank\r\nDatabase prefix table llx_\r\nCreate database leave unticked\r\nLogin _Engines_Environment(dbuser)\r\nPassword _Engines_Environment(dbpasswd)\r\nCreate owner  leave unticked\r\nClick Next Step\r\nRetain the credentials used to create the Dolibarr admin account these are are not retained by Engines"
    },
    "scripts": {
      "start": {
        "language": "sh"
      },
      "install": {
        "language": "sh"
      },
      "post_install": {
        "language": "sh",
        "content": "#!/bin/bash\r\n#\r\ntouch /home/app/install.lock\r\n"
      },
      "shutdown": {
        "language": "sh"
      }
    },
    "installed_packages": [
      {
        "name": "dolibarr-4.0.4.tgz",
        "source_url": "https://sourceforge.net/projects/dolibarr/files/Dolibarr%20ERP-CRM/4.0.4/dolibarr-4.0.4.tgz/download",
        "destination": "./",
        "extraction_command": "tar -xpf",
        "path_to_extracted": "dolibarr-4.0.4/"
      }
    ],
    "required_modules": [
      {
        "name": "rewrite",
        "type": "apache"
      }
    ],
    "service_configurations": [
      {
        "publisher_namespace": "EnginesSystem",
        "type_path": "filesystem/local/filesystem",
        "variables": {
